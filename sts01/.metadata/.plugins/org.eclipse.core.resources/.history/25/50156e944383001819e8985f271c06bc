package onty.javaRestApi.controllers;

import java.util.concurrent.atomic.AtomicLong;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.*;

import onty.javaRestApi.models.*;

@RestController
public class ProjectsController {

    private final AtomicLong counter = new AtomicLong();

    @RequestMapping("/projects")
    @GetMapping
    public Project getProjects(@RequestParam(value="name", defaultValue="World") String name) {

    	return new Project(counter.incrementAndGet(), String.format(template, name));

    }

    @RequestMapping("/projects")
    @PostMapping
    public Project postProjects(@RequestParam(value="name", defaultValue="World") String name) {

    	return new Project(counter.incrementAndGet(), String.format(template, name));

    }

}
